<div class="container">
  <div class="row">
    <h4 class="bg-light">商品一覧</h4>
  </div>

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-3 col-xs-6">
        <%= link_to item_path(product.id) do %>
          <%= attachment_image_tag product, :image, :fill, 300, 200 %>
        <% end %></br>
        <%= product.name %></br>
        <span>￥<%= product.price %></span>
      </div>
    <% end %>
  </div>
</div>
<%= paginate @products %>