<h2>商品一覧</h2>

<% @products.each do |product| %>
<div>
  <p>
    <%= link_to item_path(product.id) do %>
      <%= attachment_image_tag product, :image, :fill, 100, 50 %>
    <% end %></br>
  </p>
  <p><%= product.name %></br></p>
  <p>￥<%= product.price %></p>
</div>
<% end %>


<%= paginate @products %>