<div class="container">
  <div class="row">
    <h4 class="bg-light">配送先登録/一覧</h4>
  </div>
  <div class="row">
    <%= form_with model: @address, url: address_path, local:true do |f| %>
    <table>
      <tr>
        <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label :address, "住所" %></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label :name, "宛名" %></th>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit '変更を保存', class: "btn btn-sm btn-success" %></td>
      </tr>
    </table>
    <% end %>
  </div>
