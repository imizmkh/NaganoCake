<div class="container">
  <div class="row">
    <h4 class="bg-light">配送先登録/一覧</h4>
  </div>
  <div class="row">
    <%= form_with model: @address, url: addresses_path, local:true do |f| %>
    <table>
      <tr>
        <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label :address, "住所" %></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label :name, "宛名" %></th>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit '新規登録', class: "btn btn-sm btn-success" %></td>
      </tr>
    </table>
    <% end %>
  </div>


 <div class="row">
  <table class="table table-bordered">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集する', edit_address_path(address), class: "btn btn-sm btn-success" %>
          <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか?"  %>
        </td>
      </tr>
    <% end %>
  </table>
 </div>
</div>