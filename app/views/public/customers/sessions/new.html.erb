<div class="container">
  <h4 class="bg-light">ログイン</h4>
    <div class="row">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>  <div class="field">
        <h6 class="bg-light">会員の方はこちらからログイン</h6>
        <table>
          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th><%= f.label :password, "パスワード" %></th>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
          </tr>
        </table>
      <% end %>
      <h6 class="bg-light">会員登録がお済みでない方</h6>
        <div>
          <%= link_to "こちら",  new_customer_registration_path %>　からログインしてください。
        </div>
    </div>
</div>
