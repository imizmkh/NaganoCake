<div class="container">
  <h4 class="bg-light">新規会員登録</h4>
    <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <table>
          <tr>
            <th><%= f.label :name, "名前" %></th>
            <td>(姓)　<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
            <td>(名)　<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <th><%= f.label :kana, "フリガナ" %></th>
            <td>(セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
            <td>(メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
          </tr>
          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td>　　   <%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th><%= f.label :postal_code, "郵便番号" %></th>
            <td>　　   <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
          </tr>
          <tr>
            <th><%= f.label :address, "住所" %></th>
            <td>　　   <%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
          </tr>
          <tr>
            <th><%= f.label :telephone_number, "電話番号" %></th>
            <td>　　  <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
          </tr>
          <tr>
            <th><%= f.label :password, "パスワード(6文字以上)" %></th>
            <td>
              <% if @minimum_password_length %>
              <% end %><br />
              　 　 <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :password_confirmation, "パスワード(確認用)" %></th>
            <td>　　 <%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <th></th>
            <td>      <%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
      </div>
      <div class-"row">
      <h6 class="bg-light">既に登録済みの方</h6>
        <div>
          <%= link_to "こちら", customer_session_path %>  からログインしてください。
        </div>
      </div>

</div>
