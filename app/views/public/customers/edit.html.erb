<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customer_session_path, local:true do |f| %>

<div>
  <label for="Name">氏名</label>
  <%= f.text_field :last_name, autofocus: true, id:"Name" %>
  <%= f.text_field :first_name, autofocus: true, id:"Name" %>
</div>

<div>
  <label for="KanaName">フリガナ</label>
  <%= f.text_field :last_name_kana, autofocus: true, id:"KanaName" %>
  <%= f.text_field :first_name_kana, autofocus: true, id:"KanaName" %>
</div>

<div>
  <label for="Postalcode">郵便番号</label>
  <%= f.text_field :postal_code, autofocus: true, id:"Postalcode" %>
</div>

<div>
  <label for="Address">住所</label>
  <%= f.text_field :address, autofocus: true, id:"Address" %>
</div>

<div>
  <label for="TelephoneNumber">電話番号</label>
  <%= f.text_field :telephone_number, autofocus: true, id:"TelephoneNumber" %>
</div>

<div>
  <label for="Email">メールアドレス</label>
  <%= f.text_field :email, autofocus: true, id:"Email" %>
</div>

  <%= f.submit "編集内容を保存" %>
  <%= link_to '退会する', customers_quit_path %>
<% end %>
