<div class="container" >
    <div class="row">
      <div class="col align-items-start">
        <h4 class="bg-light">マイページ</4>
      </div>
      <span><%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-sm btn-danger" %></span>
    </div>

    <div class="row align-items-start">
      <p class="col-1">登録情報</p>
      <span><%= link_to '編集する', customers_edit_path, class:"btn btn-success" %></span>
    </div>



<table class="table table-bordered">
  <tr>
    <th>氏名</th><td><%= @customer.last_name %> <%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ</th><td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th><td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th><td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th><td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th><td><%= @customer.email %></td>
  </tr>
</table>

 <div class="row align-items-start">
  <p class="col-1">配送先</p>
  <%= link_to '一覧を見る', addresses_path, class: "btn btn-sm btn-primary"  %>
 </div>

 <div class="row align-items-start">
  <p class="col-1">注文履歴</p>
  <%= link_to '一覧を見る', orders_path, class: "btn btn-sm btn-primary"  %>
</div>