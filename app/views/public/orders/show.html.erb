<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-7">
    <h6>注文情報</h6>
      <table class="table table-bordered">
        <tr>
           <th class="bg-light">注文日</th>
           <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="bg-light">配達先</th>
          <td>
            <div>
              〒<%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.name %>
            </div>
          </td>
        </tr>
        <tr>
          <th class="bg-light">支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>

    <div class="col-5">
      <h6>請求情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="bg-light">商品合計</th>
          <td><%= @total_price %></td>
        </tr>
        <tr>
          <th class="bg-light">配送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th class="bg-light">ご請求額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <h6>注文内容</h6>
    <table class="table table-bordered">
      <thead class="bg-light">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.product.name %></td>
          <td><%= order_detail.product.add_tax_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.subtotal_price %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
