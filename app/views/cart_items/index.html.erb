<h2>ショッピングカート</h2>

<%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>

<div>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
  </table>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag cart_item.product, :image, :fill, 100, 50 %><%= cart_item.product.name %></td>
        <td><%= cart_item.product.add_tax_price.to_s(:delimited) %></td>
        <td>
          <%= form_with model: cart_item, local:true do |f| %>
             <%= f.number_field :amount, selected: cart_item.amount %>
             <%= f.submit '変更' %>
          <% end %>
          </td>
        <td><%= (cart_item.subtotal_price).to_i %>円</td>
        <td><%= button_to "削除", cart_item_path(cart_item), method: :delete %></td>

      </tr>
    <% end %>
  </tbody>
</div>



