<h2>注文履歴一覧</h2>


<div>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配達先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>
  </table>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          〒<%= order.postal_code %></br>
          <%= order.address %></br>
          <%= order.name %>
        </td>
        <td></td>
        <td></td>
        <td><%= link_to '表示する', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</div>