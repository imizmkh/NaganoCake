<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: addresses_path, local:true do |f| %>
  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<div>
  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
  </table>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to '編集する', edit_address_path(address) %><%= link_to '削除する', address_path(address), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</div>