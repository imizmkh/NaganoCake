<h2>配送先編集</h2>
<%= form_with model: @address, url: address_path, local:true do |f| %>
  <label for="PostalCode">郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code, autofocus: true, id:"PostalCode" %>

  <label for="Address">住所</label>
  <%= f.text_field :address, autofocus: true, id:"Address" %>

  <label for="Name">宛名</label>
  <%= f.text_field :name, autofocus: true, id:"Name" %>

  <%= f.submit "変更内容を保存" %>
<% end %>