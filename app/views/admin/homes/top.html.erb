<h2>注文履歴一覧</h2>


<div>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>
  </table>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <%= link_to admin_order_path(order.id) do %>
          <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <% end %>
        <td><%= order.name %></td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.product.name %>
            <%= order_detail.amount %>
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</div>