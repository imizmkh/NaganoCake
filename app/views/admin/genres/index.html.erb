<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<% @genres.each do |genres| %>
<div>
  <p>ジャンル : <%= genres.name %><%= link_to '編集する', edit_admin_genre_path(genres) %></p>
</div>
<% end %>

