<div class="container">
  <h4 class-"bg-light">ジャンル一覧・追加</h4>
  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="row">
    <table>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
      <% @genres.each do |genres| %>
      <tr>
        <td><%= genres.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genres), class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
