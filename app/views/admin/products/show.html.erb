<div class="container">
  <div class="row">
    <dvi class="col-5">
      <%= attachment_image_tag @product, :image, :fill, 300, 200  %>
    </dvi>
    <div class="col-7">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @product.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @product.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格(税抜価格)</th>
          <td><%= @product.add_tax_price.to_s(:delimited) %>(<%= @product.price %></td>
        </tr>
      </table>
      <h2 class="text-left"></h2>
      <p class="text-left"></p>
      <p class="font-size 5">￥<%= @product.add_tax_price.to_s(:delimited) %>円(税込)</h2>
      <%= form_with model: @cart_item, local:true do |f| %>
        <%= f.number_field :amount %>
        <%= f.hidden_field :product_id, :value => @product.id %>
        <%= f.submit 'カートに追加する', class:"btn btn-success" %>
      <% end %>


    </div>
  </div>
</div>

<h3>商品詳細</h3>

<div>
  <%= attachment_image_tag @product, :image %>
  <p>商品名：<%= @product.name %></p>
  <p>商品説明：<%= @product.introduction %></p>
  <p>税込価格(税抜価格)：<%= @product.price %></p>
  <%= link_to '編集する', edit_admin_product_path(@product) %>

</div>