<div class="container">
  <h4 class-"bg-light">商品編集</h4>
  <div class="row">
    <%= form_with model: @product, url: admin_product_path, local:true do |f| %>
    <table>
      <tr>
        <th><%= f.label :image, "商品画像" %></th>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <th><%= f.label :name, "商品名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :introduction, "商品説明" %></th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th><%= f.label :genre, "ジャンル" %></th>
        <td><%= f.collection_select(:genre_id, @genres, :id, :name) %></td>
      </tr>
      <tr>
        <th><%= f.label :price, "税抜価格" %></th>
        <td><%= f.text_field :price %>円</div></td>
      </tr>
    </table>
    <%= f.submit "変更を保存", class:"btn btn-success" %>
    <% end %>
  </div>
</div>
