<h3>商品編集</h3>

<%= form_with model: @product, url: admin_product_path, local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>
  <h4>税抜価格</h4>
  <div><%= f.text_field :price %>円</div>
  <%= f.submit '変更を保存' %>
<% end %>