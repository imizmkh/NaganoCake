<h2>会員一覧</h2>

<div>
  <table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
  </table>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <%= link_to admin_customer_path(customer.id) do %>
        <td><%= customer.first_name %><%= customer.last_name %></td>
        <% end %>
        <td><%= customer.email %></td>
        <td><%= customer.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</div>