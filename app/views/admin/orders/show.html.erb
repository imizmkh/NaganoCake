<h2>注文履歴詳細</h2>

<div>
  <h3>注文情報</h3>
    <tr>
      <th>購入者</th>
      <%= link_to admin_customer_path(@order.customer_id) do %>
      <td><%= @order.customer.first_name %></td>
      <% end %>
    </tr>
    <tr>
         <th>注文日</th>
         <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
        <th>配達先</th>
        <td>
            <%= @order.postal_code %></br>
            <%= @order.address %></br>
            <%= @order.name %>
        </td>
    </tr>
    <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
    </tr>
</div>

<div>
    <h3>注文内容</h3>
  <table>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
  </table>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.product.name %></td>
        <td><%= order_detail.product.add_tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.subtotal_price %></td>
      </tr>
    <% end %>
  </tbody>
</div>

<div>
  <h3>請求情報</h3>
    <tr>
         <th>商品合計</th>
         <td><%= @total_price %>円</td>
    </tr>
    <tr>
        <th>送料</th>
        <td>800円</td>
    </tr>
    <tr>
        <th>ご請求額</th>
        <td><%= @order.total_payment %>円</td>
    </tr>
</div>