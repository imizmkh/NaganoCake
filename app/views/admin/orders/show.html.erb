<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
      <table>
        <tr>
           <th>購入者</th>
           <td>
             <%= link_to admin_customer_path(@order.customer_id) do %>
               <%= @order.customer.last_name %> <%= @order.customer.first_name %>
             <% end %>
           </td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配達先</th>
          <td>
            <%= @order.postal_code %></br>
            <%= @order.address %></br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
  </div>

  <div class="row">
    <div class="col-7">
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.product.name %></td>
            <td><%= order_detail.product.add_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-5">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @total_price %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td>800円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @total_price + 800 %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>

